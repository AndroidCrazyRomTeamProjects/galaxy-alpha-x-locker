<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <com.xlocker.support.preference.colorpicker.ColorPickerView android:id="@+id/color_picker_view" android:tag="landscape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layerType="software"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_toRightOf="@+id/color_picker_view">
        <EditText android:id="@+id/hex_val" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="7" android:inputType="textCapCharacters" android:imeOptions="actionDone"/>
        <com.xlocker.support.preference.colorpicker.ColorPickerPanelView android:id="@+id/old_color_panel" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="7dp" android:layout_weight="0.5"/>
        <com.xlocker.support.preference.colorpicker.ColorPickerPanelView android:id="@+id/new_color_panel" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.5"/>
    </LinearLayout>
</RelativeLayout>
